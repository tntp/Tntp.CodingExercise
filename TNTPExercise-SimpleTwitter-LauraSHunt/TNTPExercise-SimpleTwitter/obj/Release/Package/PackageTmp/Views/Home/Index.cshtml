@model TNTPExercise_SimpleTwitter.Models.UserFeed

@{
    ViewBag.Title = "Simple Twitter";
}

<div id="spacer" style="height:25px"></div>

<div class="row">
    <div class="col-md-5">
        <div id="divUserName" style="display:block">
            @using (@Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <fieldset>
                    <legend>To comment, please submit your name</legend>
                    <div class="form-group">

                        <label class="col-form-label" for="inputDefault">Name:</label>
                        <div>
                            @Html.TextBoxFor(f => f.Name, new { @class = "form-control" })
                        </div>
                        <div id="nameValidation">
                            @Html.ValidationMessageFor(f => f.Name, "", new { style = "color:red;" })
                        </div>
                        <br/>
                        <label class="col-form-label" for="inputDefault">Please post your comment:</label>
                        <div>
                            @Html.TextAreaFor(f => f.Comment, new { style = "max-width: 400px; width: 400px; height:100px;" })
                        </div>
                        <div id="commentValidation">
                            @Html.ValidationMessageFor(f => f.Comment, "", new { style = "color:red;" })
                        </div>
                        <div style="color: #17a2b8;">@TempData["MessageSubmit"]</div>

                    </div>
                </fieldset>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>

    <div class="col-md-5">
        <div id="divCommentsFeed" style="display:block">

            <h3>Recent Comments</h3>

            <hr style="background-color: #17a2b8; height: 1px; border: 0;" />

            @foreach (var userComment in Model.UserComments)
            {
                <div>
                    <p class="card-text">@userComment.Comment</p>
                </div>
                <div style="text-align:right;"><p class="text-primary"><small><b>@userComment.Name </b>@userComment.CreatedOn.ToString("g")</small></p></div>
                <hr style="background-color: #17a2b8; height: 1px; border: 0;" />
            }

        </div>

    </div>
</div>

